<% is_alpine = (dockerfile.split("/").last.split("-").first == "alpine") %>
#!/usr/bin/dumb-init /bin/sh

#source vars if file exists
DEFAULT=/etc/default/fluentd

if [ -r $DEFAULT ]; then
    set -o allexport
    source $DEFAULT
    set +o allexport
fi

<% if is_alpine %>
exec su-exec fluent "$@"
<% else %>
exec gosu fluent "$@"
<% end %>
